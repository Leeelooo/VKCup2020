<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">@dimen/elevation_toolbar_default</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.App.ToolbarMainTitle</item>
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
    </style>

    <style name="AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/colorOnPrimaryMedium</item>
    </style>


    <style name="AppTheme.LoginButton" parent="AppTheme.TextButton">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textColor">@color/colorLoginButtonText</item>
    </style>

    <style name="AppTheme.TextInputEditText" parent="Widget.AppCompat.EditText">
        <!-- Your edit text customization changes go here. -->
    </style>

    <style name="AppTheme.OverlayTextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
        <item name="editTextStyle">@style/AppTheme.TextInputEditText</item>
        <item name="colorControlActivated">@color/colorOnPrimary</item>
    </style>

    <style name="AppTheme.EditTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="hintEnabled">false</item>
        <item name="materialThemeOverlay">@style/AppTheme.OverlayTextInputEditText</item>
    </style>

</resources>
